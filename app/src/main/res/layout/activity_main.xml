<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorOperationBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/score_hint"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/score"
            android:textSize="25sp"
            android:textColor="@color/colorText1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/zero"
            android:textSize="25sp"
            android:textColor="@color/colorText1"
            android:layout_toEndOf="@id/score_hint"
            android:layout_toStartOf="@id/restart"
            android:layout_marginStart="10dp"/>
        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/restart_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorText1"
            android:background="@color/colorBtn"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainBg">
        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_margin="0dp"
            android:padding="0dp"
            >
            <FrameLayout
                android:id="@+id/cell01"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell02"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell03"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell04"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell05"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell06"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell07"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell08"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell09"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell10"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell11"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell12"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell13"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell14"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell15"
                style="@style/CardElement">
            </FrameLayout>
            <FrameLayout
                android:id="@+id/cell16"
                style="@style/CardElement">
            </FrameLayout>
        </GridLayout>
        <com.example.game2048_2.GameMain
            android:id="@+id/movable_card_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">
        </com.example.game2048_2.GameMain>
    </FrameLayout>

</LinearLayout>